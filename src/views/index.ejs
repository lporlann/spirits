  </head>

  <body>
        <!-- NAVBAR -->
    <%- include ('partials/navbar') %> 
   
   
    <!-- PORTADA PRINCIPAL -->
    <section class="main">
      <div class="container">
        <div class="row py-4">
          <div class="col-lg-7 pt-5 text-center">
            <h1>La mejor tienda</h1>
          </div>
        </div>
      </div>
    </section>
    <!--SECCION PRODUCTOS  -->

    <secction class="product">
      <div class="container py-5" id="title">
        <div class="row py-5">
          <div class="col-lg-5 m-auto text-center">
            <h1>WHISKEY & BOURBON</h1>
            <h6>De todo el mundo</h6>
          </div>
        </div>

        <div class="row" id="product-card"></div>
      </div>
    </secction>
    <!-- CARRITO -->
    <secction class="product" id="shop-cart">
      <div class="container py-5">
        <div class="row py-5">
          <div class="col-lg-5 m-auto text-center">
            <h1>CARRITO</h1>
            <h6></h6>
          </div>
        </div>

        <div class="container">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">Producto</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Eliminar</th>
              </tr>
            </thead>
            <tbody class="table table-striped" id="cart-table"></tbody>
          </table>
        </div>

        <div class="container">
          <h2 class="total" id="total-value">TOTAL = $0</h2>
          <button type="submit" class="btn btn-success" id="buy-button">
            COMPRAR
          </button>
        </div>
      </div>
    </secction>
    <button class="back-top">
      <span><i id="arrow-up" class="fa-solid fa-arrow-up"></i></span>
    </button>
